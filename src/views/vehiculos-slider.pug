//- Declaration
mixin vehiculo(image, titulo, puestosmin, puestosmax)
  li.vehiculo
    img.vehiculo__image(src=image alt=titulo)
    h4.vehiculo__titulo= titulo
    p.vehiculo__puestos
      span.min= puestosmin
      = " - " + puestosmax + " puestos"
ul.slider-vehiculos
  +vehiculo('assets/images/minivan.png', 'Mini Van', 8, 10)
  +vehiculo('assets/images/minivan.png', 'Van', 12, 16)
  +vehiculo('assets/images/minivan.png', 'Camioneta', 6, 8)
  +vehiculo('assets/images/minivan.png', 'Bus Peque√±o', 20, 23)
  +vehiculo('assets/images/minivan.png', 'Bus Grande', 25,30)
